# focus window
ctrl - up : yabai -m window --focus north
ctrl - down : yabai -m window --focus south
ctrl - left : yabai -m window --focus west
ctrl - right : yabai -m window --focus east

# move window
cmd + alt - up    : yabai -m window --warp north
cmd + alt - down  : yabai -m window --warp south
cmd + alt - left  : yabai -m window --warp west
cmd + alt - right : yabai -m window --warp east

# swap window
alt + shift - up    : yabai -m window --swap north
alt + shift - down  : yabai -m window --swap south
alt + shift - left  : yabai -m window --swap west
alt + shift - right : yabai -m window --swap east

# サイズ調整
ctrl + shift - up    : yabai -m window --resize top:0:-200   || yabai -m window --resize bottom:0:-200
ctrl + shift - down  : yabai -m window --resize bottom:0:200 || yabai -m window --resize top:0:200
ctrl + shift - left  : yabai -m window --resize left:-200:0  || yabai -m window --resize right:-200:0
ctrl + shift - right : yabai -m window --resize right:200:0  || yabai -m window --resize left:200:0

# 時計回りに回転
alt - r : yabai -m space --rotate 270

# 左右入れ替え
alt - x : yabai -m space --mirror y-axis

# 上下入れ替え
alt - y : yabai -m space --mirror x-axis

# フルスクリーン
alt - d : yabai -m window --toggle zoom-fullscreen

# フローティング
alt - f : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# 分割方式変更
alt - e : yabai -m window --toggle split

# 分割バランス
shift + alt - 0 : yabai -m space --balance

# 次のディスプレイへフォーカス移動
alt - z : yabai -m display --focus prev
alt - c : yabai -m display --focus next

# 指定のディスプレイ番号へフォーカス移動
# cmd - 1 : yabai -m display --focus 1
# cmd - 2 : yabai -m display --focus 2
# cmd - 3 : yabai -m display --focus 3

# 指定のディスプレイ番号へウィンドウを移動
ctrl + cmd - 1 : yabai -m window --display 1; yabai -m display --focus 1
ctrl + cmd - 2 : yabai -m window --display 2; yabai -m display --focus 2
ctrl + cmd - 3 : yabai -m window --display 3; yabai -m display --focus 3

# アプリ起動
cmd - 1 : open -n /Applications/iTerm.app
cmd - 2 : open -n /System/Library/CoreServices/Finder.app
cmd - 3 : open -n /Applications/Google\ Chrome.app
cmd - 4 : open -n /Applications/CotEditor.app
cmd - 5 : open -n /Applications/Visual\ Studio\ Code.app
cmd - 6 : open /System/Applications/Calculator.app
