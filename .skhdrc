# focus window
alt + cmd - b : yabai -m window --focus west
alt + cmd - n : yabai -m window --focus south
alt + cmd - p : yabai -m window --focus north
alt + cmd - f : yabai -m window --focus east

# swap window
shift + alt - b : yabai -m window --swap west
shift + alt - n : yabai -m window --swap south
shift + alt - p : yabai -m window --swap north
shift + alt - f : yabai -m window --swap east

# move window
# shift + cmd - b : yabai -m window --warp west
# shift + cmd - n : yabai -m window --warp south
# shift + cmd - p : yabai -m window --warp north
# shift + cmd - f : yabai -m window --warp east

# サイズ調整
alt - left  : yabai -m window --resize left:-40:0  || yabai -m window --resize right:-40:0
alt - right : yabai -m window --resize right:40:0  || yabai -m window --resize left:40:0
alt - up    : yabai -m window --resize top:0:-40   || yabai -m window --resize bottom:0:-40
alt - down  : yabai -m window --resize bottom:0:40 || yabai -m window --resize top:0:40

# 時計回りに回転
alt - r : yabai -m space --rotate 270

# 左右入れ替え
alt - x : yabai -m space --mirror y-axis

# 上下入れ替え
alt - y : yabai -m space --mirror x-axis

# フルスクリーン
alt - d : yabai -m window --toggle zoom-fullscreen

# 分割方式変更
alt - e : yabai -m window --toggle split

# 分割バランス
shift + alt - 0 : yabai -m space --balance

# 次のディスプレイへフォーカス移動
alt - z : yabai -m display --focus prev
alt - c : yabai -m display --focus next

# 指定のディスプレイ番号へフォーカス移動
cmd - 1 : yabai -m display --focus 1
cmd - 2 : yabai -m display --focus 2
cmd - 3 : yabai -m display --focus 3

# 指定のディスプレイ番号へウィンドウを移動
ctrl + cmd - 1 : yabai -m window --display 1; yabai -m display --focus 1
ctrl + cmd - 2 : yabai -m window --display 2; yabai -m display --focus 2
ctrl + cmd - 3 : yabai -m window --display 3; yabai -m display --focus 3

# アプリ起動
alt - 1 : open /System/Library/CoreServices/Finder.app
alt - 2 : open -n /Applications/Google\ Chrome.app
alt - 3 : open -n /Applications/CotEditor.app
alt - 4 : open -n /Applications/Visual\ Studio\ Code.app
alt - 5 : open /System/Applications/Stickies.app

