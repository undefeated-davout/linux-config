# ディスプレイ内フォーカス移動
cmd + ctrl - up    : yabai -m window --focus north
cmd + ctrl - down  : yabai -m window --focus south
cmd + ctrl - left  : yabai -m window --focus west
cmd + ctrl - right : yabai -m window --focus east
cmd + ctrl - p     : yabai -m window --focus north
cmd + ctrl - n     : yabai -m window --focus south
cmd + ctrl - b     : yabai -m window --focus west
cmd + ctrl - f     : yabai -m window --focus east

# 次のディスプレイへフォーカス移動
cmd + ctrl - z : yabai -m display --focus prev
cmd + ctrl - c : yabai -m display --focus next

# 指定のディスプレイ番号へフォーカス移動
cmd + ctrl - 1 : yabai -m display --focus 1
cmd + ctrl - 2 : yabai -m display --focus 3
cmd + ctrl - 3 : yabai -m display --focus 2

# ディスプレイ内ウィンドウ移動
cmd + alt - up    : yabai -m window --warp north
cmd + alt - down  : yabai -m window --warp south
cmd + alt - left  : yabai -m window --warp west
cmd + alt - right : yabai -m window --warp east
cmd + alt - p     : yabai -m window --warp north
cmd + alt - n     : yabai -m window --warp south
cmd + alt - b     : yabai -m window --warp west
cmd + alt - f     : yabai -m window --warp east

# 指定のディスプレイ番号へウィンドウを移動
cmd + alt - 1 : yabai -m window --display 1; yabai -m display --focus 1
cmd + alt - 2 : yabai -m window --display 2; yabai -m display --focus 2
cmd + alt - 3 : yabai -m window --display 3; yabai -m display --focus 3

# ディスプレイ内ウィンドウ入れ替え
shift + alt - up    : yabai -m window --swap north
shift + alt - down  : yabai -m window --swap south
shift + alt - left  : yabai -m window --swap west
shift + alt - right : yabai -m window --swap east
shift + alt - p     : yabai -m window --swap north
shift + alt - n     : yabai -m window --swap south
shift + alt - b     : yabai -m window --swap west
shift + alt - f     : yabai -m window --swap east

# 指定のディスプレイ番号へウィンドウ入れ替え
shift + alt - 1 : yabai -m window --swap --display 1; yabai -m display --focus 1
shift + alt - 2 : yabai -m window --swap --display 3; yabai -m display --focus 3
shift + alt - 3 : yabai -m window --swap --display 2; yabai -m display --focus 2

# サイズ調整
shift + ctrl - up    : yabai -m window --resize top:0:-200   || yabai -m window --resize bottom:0:-200
shift + ctrl - down  : yabai -m window --resize bottom:0:200 || yabai -m window --resize top:0:200
shift + ctrl - left  : yabai -m window --resize left:-200:0  || yabai -m window --resize right:-200:0
shift + ctrl - right : yabai -m window --resize right:200:0  || yabai -m window --resize left:200:0
shift + ctrl - p     : yabai -m window --resize top:0:-200   || yabai -m window --resize bottom:0:-200
shift + ctrl - n     : yabai -m window --resize bottom:0:200 || yabai -m window --resize top:0:200
shift + ctrl - b     : yabai -m window --resize left:-200:0  || yabai -m window --resize right:-200:0
shift + ctrl - f     : yabai -m window --resize right:200:0  || yabai -m window --resize left:200:0

# 時計回りに回転
alt - r : yabai -m space --rotate 270

# 左右入れ替え
alt - x : yabai -m space --mirror y-axis

# 上下入れ替え
alt - y : yabai -m space --mirror x-axis

# フルスクリーン
alt - d : yabai -m window --toggle zoom-fullscreen

# フローティング
alt - f : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# 分割方式変更
alt - e : yabai -m window --toggle split

# 分割バランス
shift + alt - 0 : yabai -m space --balance

# アプリ起動
cmd - 1 : open /Applications/iTerm.app
cmd - 2 : open /System/Library/CoreServices/Finder.app
cmd - 3 : open /Applications/Google\ Chrome.app
cmd - 4 : open /Applications/CotEditor.app
cmd - 5 : open /Applications/Visual\ Studio\ Code.app
cmd - 6 : open /System/Applications/Calculator.app
cmd - 7 : open /Applications/Amazon\ Kindle.app
cmd - 8 : open /Applications/Firefox.app
