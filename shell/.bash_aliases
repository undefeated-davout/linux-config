alias ll='eza -lahF --time-style=long-iso --no-permissions --no-user --icons'
alias lr='ll -s=modified -r'
alias llh='ls -lahF'
alias cat='bat --paging=never --decorations=never --color=always'
alias catd='bat --paging=never'
alias sudo='sudo '
alias watch='watch -n1 -c -d '
alias man='env LANG=C man' # manコマンドは英語版を使用する
alias jman='env LANG=ja_JP.UTF-8 man'
